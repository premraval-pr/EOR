<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExtraCredentialsRegisterPage"
    android:background="@color/__primaryColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="120dp"
        android:id="@+id/__constraintlauout_sigup"
        android:background="@drawable/layout_roundbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/__textview_extraCredHeading"
            android:textSize="24sp"
            android:text="Extra Credentials"
            android:gravity="center"
            android:backgroundTint="@color/__darkBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="7dp"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/__textColor"
            android:layout_marginHorizontal="25dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/__edittext_displayname"
            android:hint="Display Name"
            android:textSize="14sp"
            android:textColor="@color/__textColor"
            android:backgroundTint="@color/__inputBackground"
            app:layout_constraintTop_toBottomOf="@id/__textview_extraCredHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="7dp"
            android:layout_marginTop="15dp"
            android:paddingStart="20dp"
            android:layout_marginHorizontal="25dp"
            android:textColorHint="@color/__hintColor"
            android:background="@drawable/layout_roundbackground"
            android:maxLines="1"
            android:maxLength="14"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/__edittext_password_signup"
            android:hint="Password"
            android:textColor="@color/__textColor"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:backgroundTint="@color/__inputBackground"
            app:layout_constraintTop_toBottomOf="@id/__edittext_displayname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="7dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/__hintColor"
            android:paddingStart="20dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/layout_roundbackground"
            android:maxLines="1"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/__edittext_confirmpassword_signup"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:backgroundTint="@color/__inputBackground"
            android:textColor="@color/__textColor"
            android:textColorHint="@color/__hintColor"
            app:layout_constraintTop_toBottomOf="@id/__edittext_password_signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="7dp"
            android:layout_marginTop="15dp"
            android:paddingStart="20dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/layout_roundbackground"
            android:maxLines="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/__button_regsiter_ExtraCredentialsPage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/__edittext_confirmpassword_signup"
            android:background="@drawable/layout_roundinputbackground"
            android:backgroundTint="@color/__primaryColor"
            android:textColor="#ffffff"
            android:paddingHorizontal="35dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>