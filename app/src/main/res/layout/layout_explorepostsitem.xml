<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/__roundbackground_explore">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/__defaultimageicon"
        android:id="@+id/__imageview_defaultimage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Title"
        app:layout_constraintTop_toTopOf="@id/__imageview_defaultimage"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/__imageview_defaultimage"
        android:id="@+id/__textview_itemtitle"
        android:textSize="25sp"
        android:textColor="@color/__textColor"
        >
    </TextView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/__imageview_defaultimage"
        app:layout_constraintTop_toBottomOf="@id/__textview_itemtitle"
        android:layout_marginStart="8dp"
        android:text="By"
        android:textSize="12sp"
        android:textStyle="italic"
        android:id="@+id/__textview_username_start"
        android:textColor="@color/__hintColor"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/__textview_username_start"
        app:layout_constraintBottom_toBottomOf="@id/__textview_username_start"
        android:text="Username"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/__textview_username_start"
        android:id="@+id/__textview_username"
        android:layout_marginStart="4dp"
        android:textStyle="italic"
        android:textColor="@color/__hintColor">

    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/__textview_username_start"
        app:layout_constraintTop_toBottomOf="@id/__textview_username_start"
        android:text="From"
        android:textSize="12sp"
        android:textColor="@color/__hintColor"
        android:textStyle="italic"
        android:id="@+id/__textview_location_start">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/__textview_location_start"
        app:layout_constraintTop_toTopOf="@id/__textview_location_start"
        app:layout_constraintBottom_toBottomOf="@id/__textview_location_start"
        android:layout_marginStart="4dp"
        android:text="Location"
        android:textSize="12sp"
        android:id="@+id/__textview_location"
        android:textColor="@color/__hintColor"
        android:textStyle="italic">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/__dollar"
        app:layout_constraintRight_toLeftOf="@id/__textview_price"
        app:layout_constraintBottom_toBottomOf="@id/__textview_price"
        app:layout_constraintTop_toTopOf="@id/__textview_price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:text="20.00"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:padding="5dp"
        android:background="@drawable/layout_pricebidpost"
        android:id="@+id/__textview_price"
        android:layout_margin="15dp"
        android:textColorHighlight="@color/__primaryLightBackground"
        android:textColor="@color/__textColor"
        >

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>